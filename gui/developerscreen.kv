# file name: developerscreen.kv
#:import developerscreen developerscreen


<User_button_device@Button>:

    size_hint_x:None
    size_hint_y: None
    width:50
    height: 50
    font_size: 16

<Status_light@Image>:

    size_hint_x: None
    width:20
    allow_stretch: False
    keep_ratio: False



<DeveloperScreen>:

    name: 'developerscreen'
    id : _developerscreen

    FloatLayout:
        BackgroundScreen:
            id: _backgroundscreen

        AnchorLayout:
            anchor_x:"center"
            anchor_y:"top"
            padding:[0,0,0,0]
            Label:
                id: _screen
                text: "Postavke ureÄ‘aja"
                color: 0,0,0,1
                size_hint: None, None
                font_size:'30'
        AnchorLayout:
            anchor_x:"left"
            anchor_y:"bottom"
            padding:[10,0,0,-10]
            Button:
                text: 'Natrag'
                size_hint: .15,.15
                background_color: (0,0,0,0)
                background_normal:''
                on_press: root.manager.current = 'welcomescreen'
                Image:
                    source:"images/back_button.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size:110,200
                    allow_stretch: True



        AnchorLayout:
            anchor_x:"right"
            anchor_y:"bottom"
            padding:[0,0,10,-10]
            Button:
                text: 'Naprijed'
                size_hint: .15,.15
                background_color: (0,0,0,0)
                background_normal:''
                on_press: root.manager.current = 'paymentcontrolscreen'
                Image:
                    source:"images/forward_button.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size:110,200
                    allow_stretch: True

        AnchorLayout:
            anchor_x:"right"
            anchor_y:"top"
            padding:[0,100,180,0]
            GridLayout:
                rows:6
                cols:2
                spacing:20,20
                row_default_height: 35
                row_force_default: True
                size_hint:None,None

                Status_light:
                    id: _all_device_disabled_light
                    source: 'images/green_ok.png'

                User_button_device:
                    id: _all_device_disable_button
                    text: "Disable All"
                    on_press:
                        root.control_device("active_devices", "all_enable")


                Status_light:
                    id: _coin_device_light
                    source: 'images/green_ok.png'

                User_button_device:
                    id:_coin_device_button
                    text: "Disable Coin"
                    on_press:
                        root.control_device("active_devices", "coin_device")

                Status_light:
                    id: _bill_device_light
                    source: 'images/green_ok.png'

                User_button_device:
                    id:_bill_device_button
                    text: "Disable Bill"
                    on_press:
                        root.control_device("active_devices", "bill_device")

        AnchorLayout:
            anchor_x:"left"
            anchor_y: "center"
            padding:[0,0,0,160]
            GridLayout:
                rows:6
                cols:2
                spacing:20,20
                row_default_height: 35
                row_force_default: True
                size_hint:None,None

                Status_light:
                    id: _hooper_device_light
                    source: 'images/green_ok.png'

                User_button_device:
                    id:_hooper_device_button
                    text: "Disable Hooper"
                    on_press:
                        root.control_device("active_devices", "hooper_device")


                Status_light:
                    id: _printer_device_light
                    source: 'images/green_ok.png'

                User_button_device:
                    id:_printer_device_button
                    text: "Disable Printer"
                    on_press:
                        root.control_device("active_devices", "printer_device")


                Status_light:
                    id: _air_pump_device_light
                    source: 'images/green_ok.png'

                User_button_device:
                    id:_air_pump_device_button
                    text: "Disable Air Pump"
                    on_press:
                        root.control_device("active_devices", "air_pump")



