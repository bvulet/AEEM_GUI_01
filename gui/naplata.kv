# File name naplata.kv
#:import naplatascreen naplatascreen
#:import Factory kivy.factory.Factory
<Dompopup@Popup>:

    title:'Problemi u radu!'
    title_size:25
    title_align:'center'
    size_hint: None, None
    size: 450, 250
    BoxLayout:
        Label:
            text: """Imate Poteskoca, Molimo kontaktirajte \n xxxxxxxxxxx\nNivu """
            font_size: 20
            color: 1 ,1 ,1 ,1




<Timetoggle1@ToggleButton>:
    size_hint: None, None
    group: 'timeselect'

<NaplataScreen>:
    backgroundscreen:_backgroundscreen
    name: 'naplatascreen'

    on_pre_enter:
        min_15.state = 'normal'

    BackgroundScreen:
        id: _backgroundscreen


    AnchorLayout:
        anchor_x:"left"
        anchor_y:"bottom"
        padding:[-25,0,0,-25]
        Button:
            text: 'Natrag'
            size_hint: .2,.2
            background_color: 0,0,0,0
            background_normal:''
            on_press: root.manager.current = 'welcomescreen'
            Image:
                source:"images/back_button.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:110,200
                allow_stretch: True


    AnchorLayout:
        anchor_x:"left"
        anchor_y:"top"
        padding:[10,80,0,0]
        GridLayout:

            rows:3
            cols:2
            spacing_vertical:10
            spacing_horizontal:1
            row_default_height: 110
            col_default_width:100
            row_force_default: True
            col_force_default:True
            Timetoggle1:
                id: min_15
                text: '15 min'
                on_state: root.time_select_deselect(*args, 'min_15')

    AnchorLayout:
        anchor_x:"center"
        anchor_y:"center"
        padding:[0,0,0,0]

        GridLayout:
            rows:1
            cols:2
            size_hint:None,None

            col_default_width:100

            col_force_default:True
            Label:
                id: _amount_description
                text: "Uplaćeno"
                color: 1,1,1,1
                font_size:'20'

            Label:
                id: _amount_insert
                text: "Uplaćeno"
                color: 1,1,1,1
                font_size:'20'

    AnchorLayout:
        anchor_x:"center"
        anchor_y:"bottom"
        padding:[0,0,0,60]
        Button:
            text: "Potvrdi"
            size_hint: .3,.15
            on_press:
                root.confirm_selection()


    Button:
        id: _warningbtn
        size_hint:.1,.1
        background_color: 0,0,0,0
        pos_hint: {'right':.95,'top':.3}
        on_press: Factory.Dompopup().open()
        Image:
            id: _warning_img
            source: 'images/warning.png'
            size_hint: root.width, root.height
            allow_stretch: False
            keep_ratio: False
            center_x: self.parent.center_x
            center_y: self.parent.center_y
