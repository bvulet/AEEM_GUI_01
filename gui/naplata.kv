# File name naplata.kv
#:import naplatascreen naplatascreen
#:import Factory kivy.factory.Factory
<Dompopup@Popup>:

    title:'Problemi u radu!'
    title_size:25
    title_align:'center'
    size_hint: None, None
    size: 450, 250
    BoxLayout:
        Label:
            text: """Imate Poteskoca, Molimo kontaktirajte \n xxxxxxxxxxx\nNivu """
            font_size: 20
            color: 1 ,1 ,1 ,1




<Timetoggle1@ToggleButton>:
    size_hint: None, None
    group: 'timeselect'

<NaplataScreen>:
    backgroundscreen:_backgroundscreen
    name: 'naplatascreen'

    on_pre_enter:
        min_15.state = 'normal'
        min_30.state = 'normal'
        min_45.state = 'normal'
        hour_1.state = 'normal'
        hour_2.state = 'normal'
        hour_24.state = 'normal'
        _cost_selected.text = 'Izabrano'




    BackgroundScreen:
        id: _backgroundscreen


    AnchorLayout:
        anchor_x:"left"
        anchor_y:"bottom"
        padding:[-25,0,0,-25]
        Button:
            text: 'Natrag'
            size_hint: .2,.2
            background_color: 0,0,0,0
            background_normal:''
            on_press: root.manager.current = 'welcomescreen'
            Image:
                source:"images/back_button.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:110,200
                allow_stretch: True


    AnchorLayout:
        anchor_x:"left"
        anchor_y:"top"
        padding:[10,80,0,0]
        GridLayout:

            rows:3
            cols:2
            spacing_vertical:10
            spacing_horizontal:1
            row_default_height: 110
            col_default_width:100
            row_force_default: True
            col_force_default:True
            Timetoggle1:
                id: min_15
                text: '15 min'
                on_state: root.time_select_deselect(*args, 'min_15')


            Timetoggle1:
                id: min_30
                text: '30 min'
                on_state: root.time_select_deselect(*args,'min_30')

            Timetoggle1:
                id: min_45
                text: '45 min'
                on_state: root.time_select_deselect(*args,'min_45')

            Timetoggle1:
                id: hour_1
                text: '1h'
                on_state: root.time_select_deselect(*args,'hour_1')

            Timetoggle1:
                id: hour_2
                text: '2h'
                on_state: root.time_select_deselect(*args,'hour_2')

            Timetoggle1:
                id: hour_24
                text: '24h'
                on_state: root.time_select_deselect(*args,'hour_24')

    AnchorLayout:
        anchor_x:"left"
        anchor_y:"top"
        padding:[70,-10,0,0]

        Label:
            id: _selectoption
            _option_color: 1,1,1,1

            canvas.after:
                Color:
                    rgba: self._option_color

                Line
                    points:
                        (self.center_x-90, self.top-70, self.center_x-90, self.top-60,
                        self.center_x-90, self.top-70, self.center_x-80, self.top-70)


                Line
                    points:
                        (self.center_x-90, self.top-30, self.center_x-90, self.top-40,
                        self.center_x-90, self.top-30, self.center_x-80, self.top-30)


                Line

                    points:
                        (self.center_x+90, self.top-70, self.center_x+90, self.top-60,
                        self.center_x+90, self.top-70, self.center_x+80, self.top-70)

                Line
                    points:
                        (self.center_x+90, self.top-30, self.center_x+90, self.top-40,
                        self.center_x+90, self.top-30, self.center_x+80, self.top-30)

            text: "1. Izaberite vrijeme"
            color: 0,0,0,1
            size_hint: None, None
            font_size:'20'
    AnchorLayout:
        anchor_x:"center"
        anchor_y:"center"
        padding:[100,0,0,110]
        Label:
            id:_priceview
            _option_color: (1, 1, 1, 1)
            canvas.after:
                Color:
                    rgba: self._option_color
                Line
                    points:
                        (self.center_x-60, self.top-65, self.center_x-60, self.top-55,
                        self.center_x-60, self.top-65, self.center_x-50, self.top-65)

                Line
                    points:
                        (self.center_x-60, self.top-30, self.center_x-60, self.top-40,
                        self.center_x-60, self.top-30, self.center_x-50, self.top-30)


                Line
                    points:
                        (self.center_x+60, self.top-65, self.center_x+60, self.top-55,
                        self.center_x+60, self.top-65, self.center_x+50, self.top-65)

                Line
                    points:
                        (self.center_x+60, self.top-30, self.center_x+60, self.top-40,
                        self.center_x+60, self.top-30, self.center_x+50, self.top-30)

            text: "2. Plaćanje"
            color: 0,0,0,1
            size_hint: None, None
            font_size:'20'
    AnchorLayout:
        anchor_x:"center"
        anchor_y:"center"
        padding:[0,0,0,0]

        GridLayout:
            rows:2
            cols:2
            size_hint:None,None

            col_default_width:100

            col_force_default:True

            Label:
                id: _cost
                text: "Cijena"
                color: 1,1,1,1
                font_size:'20'

            Label:
                id: _cost_selected
                text: "Izabrano"
                color: 1,1,1,1
                font_size:'20'


            Label:
                id: _amount
                text: "Iznos"
                color: 1,1,1,1
                font_size:'20'

            Label:
                id: _amount_insert
                text: "Uplaćeno"
                color: 1,1,1,1
                font_size:'20'

    AnchorLayout:
        anchor_x:"center"
        anchor_y:"bottom"
        padding:[0,0,0,60]
        Button:
            text: "Potvrdi"
            size_hint: .3,.15
            on_press:
                root.confirm_selection()


    Button:
        id: _warningbtn
        size_hint:.1,.1
        background_color: 0,0,0,0
        pos_hint: {'right':.95,'top':.3}
        on_press: Factory.Dompopup().open()
        Image:
            id: _warning_img
            source: 'images/warning.png'
            size_hint: root.width, root.height
            allow_stretch: False
            keep_ratio: False
            center_x: self.parent.center_x
            center_y: self.parent.center_y
